{
  "id": "com.milight",
  "version": "3.0.3",
  "compatibility": ">=0.8.33",
  "category": "lights",
  "name": {
    "en": "Milight (EasyBulb)",
    "nl": "Milight (EasyBulb)"
  },
  "description": {
    "en": "Connect your Milight (EasyBulb) light bulbs with Homey",
    "nl": "Verbind je Milight (EasyBulb) lampen met Homey"
  },
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "drivers": [
    {
      "id": "rgbww_bulb",
      "name": {
        "en": "RGBWW Bulb",
        "nl": "RGBWW Lamp"
      },
      "images": {
        "large": "./drivers/rgbww_bulb/assets/images/large.jpg",
        "small": "./drivers/rgbww_bulb/assets/images/small.jpg"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_temperature",
        "light_mode"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "setOnDim": false
        }
      },
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "invert_red_and_green",
          "type": "checkbox",
          "value": false,
          "label": {
            "en": "Invert red and green values",
            "nl": "Wissel rode en groene waarden om"
          },
          "hint": {
            "en": "Some Milight RGBWW controllers have the red and green values switched. If Homey sets a different color on your RGBWW led strip than expected, enable this setting.",
            "nl": "Sommige Milight RGBWW controllers hebben de rode en groene waarden omgedraait. Als Homey een andere kleur instelt op de RGBWW led strip dan verwacht, vink dan deze checkbox aan."
          }
        },
        {
          "id": "hue_calibration",
          "type": "number",
          "value": 0,
          "attr": {
            "min": -0.5,
            "max": 0.5,
            "step": 0.01
          },
          "label": {
            "en": "Hue calibration",
            "nl": "Kleur tint kalibratie"
          },
          "hint": {
            "en": "Use this value to calibrate the hue value send to the device. This can be used to compensate for deviating colors.",
            "nl": "Gebruik deze waarde om de kleur tint te kalibreren. Dit kan gebruikt worden om te compenseren voor afwijkende kleuren."
          }
        }
      ]
    },
